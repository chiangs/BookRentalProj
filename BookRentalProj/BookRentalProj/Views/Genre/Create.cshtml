@model BookRentalProj.Models.Genre
@{
    ViewBag.Title = "Create";
}

@*Add form using Razer syntax*@
@using (Html.BeginForm())
{
    // built in to detect unique requests from user to detect proper request
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Create New Genre</h3>
        <hr />
        <div class="form-border">
            <div class="form-group">
                @Html.LabelFor(x => x.Name, htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Name, new { htmlAttributes = new {@class="form-control"} })
                    @* Apply validations *@
                    @Html.ValidationMessageFor( x => x.Name, "", new {@class="text-danger"})
                </div>
            </div>
        </div>
        <br />
        <div>
            <input type="submit" value="Create" class="btn btn-sm btn-success"/>
           @Html.Partial("_BackToListButtonPartial")
        </div>
    </div>
}
