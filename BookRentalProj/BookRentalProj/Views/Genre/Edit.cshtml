@model BookRentalProj.Models.Genre
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Edit Genre</h3>
        <hr/>

        <div class="form-border">
            @* Hidden Id so that it gets posted when form is submitted *@
            @Html.HiddenFor(x => x.Id)

            <div class="form-group">
                @Html.LabelFor(x => x.Name, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(x => x.Name, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>
    </div>
    <br/>

    <div class="col-md-offset-2">
        @Html.Partial("_BackToListButtonPartial")
        <input type="submit" name="save" value="Save" class="btn btn-success btn-sm"/>
    </div>
}